
@using AdminPaneNew.Areas.OfficialAdmin.Models
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/Layout.cshtml";
    dbcontext db = new dbcontext();
    List<slider> ss = db.sliders.ToList();
    List<Service> service = db.Services.ToList();
    var tie = db.Clientlogoes.ToList();
    var test = db.Testimonials.ToList();
    var servoffer = db.Pages.Where(x => x.Pagesid == 8).FirstOrDefault();
    var achieve = db.Achievers.ToList().Take(4);
    var welcom = db.Pages.Where(x => x.Pagesid == 1).FirstOrDefault();
    List<Counter> counter = db.Counters.ToList();
}



<ul class="rslides">
@if (ss != null)
{
    foreach (var s in ss)
    {

    <li><img src="~/UploadedFiles/@s.Image" alt=""></li>
    }
}
 
</ul>

@*What We Are*@

<div class="row-service-1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="40"></div>
                <div class="wprt-headings text-center clearfix">
            
                    <h2 class="heading">@servoffer.Name</h2>
                    <div class="sub-heading">@Html.Raw(servoffer.Description)</div>
             
                </div>
                <div class="wprt-spacer clearfix" data-desktop="42" data-mobi="30" data-smobi="20"></div>
                <div class="wprt-carousel-box arrow-style-1 arrow-square arrow-center offsetcenter offset-v-80 has-arrows" data-auto="false" data-loop="false" data-gap="30" data-column="4" data-column2="2" data-column3="1">
                    <div class="owl-carousel owl-theme owl-loaded owl-drag">
                 
                         @foreach (var ser in service)
                         {
                                <div class="wprt-image-box style-1 clearfix ">
                                 <div class="item">
                                  <div class="thumb">
                                    <img src="~/UploadedFiles/@ser.Thumbnail" alt="Image">
                                  </div>

                                 <div class="text-wrap">
                                    <h3 class="title">
                                        <a target="_blank" href="#">@ser.Name</a>
                                    </h3>
                                    <div class="desc">@Html.Raw(ser.ShortDescription)</div>
                                    <div class="wprt-link">
                                        @Html.ActionLink("READ MORE", "Service", new { id = ser.Serviceid }, new { @class = "small wprt-button outline ol-accent" })
                                    </div>
                                </div>
                                </div>
                                </div><!-- /.wprt-image-box style-1 -->
                         }
                   
                    </div>
                </div><!-- /wprt-carousel-box -->

                <div class="wprt-spacer clearfix" data-desktop="76" data-mobi="60" data-smobi="40"></div>
            </div>
        </div><!-- /.row -->
    </div><!-- /.container -->
</div>

@*Welcome Content*@

<div class="row-about-1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="60" style="height:80px"></div>
            </div>

            <div class="col-md-6">
                <div class="wprt-image-video w60">
                    <img alt="image" src="~/UploadedFiles/@welcom.Image">
                    @*<a class="icon-wrap popup-video" href="https://www.youtube.com/watch?v=HQzR7iiO5H4"></a>*@
                </div>
            </div>

            <div class="col-md-6">
                <div class="wprt-spacer clearfix" data-desktop="0" data-mobi="30" data-smobi="30" style="height:0px"></div>

                <div class="padding-left-30">
                    <div class="wprt-headings clearfix">
                        <h2 class="heading">@welcom.Name</h2>
                    </div>

                    <div class="wprt-spacer clearfix" data-desktop="41" data-mobi="30" data-smobi="10" style="height:41px"></div>

