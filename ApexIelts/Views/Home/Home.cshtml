                </div>
            </div><!-- /.col-md-6 -->

            
        </div><!-- /.row -->
    </div><!-- /.container -->
</div>

<div class="row-about-1" style="background: #5c70fc;">
    <div class="container">
        <div class="col-md-12">

            <div class="wd-770">
                <div class="row">
                    <div class="col-md-3 col-sm-6">
                        <div class="wprt-counter">
                            <span class="number" data-speed="2000" data-to="@counter[0].Experience" data-inviewport="yes">@counter[0].Experience</span>
                            <div class="heading">Years of Experience</div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-6">
                        <div class="wprt-counter">
                            <span class="number" data-speed="2000" data-to="@counter[0].Customers" data-inviewport="yes">@counter[0].Customers</span>
                            <span class="suffix">k</span>
                            <div class="heading">Happy Customers</div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-6">
                        <div class="wprt-counter">
                            <span class="number" data-speed="2000" data-to="@counter[0].Award" data-inviewport="yes">@counter[0].Award</span>
                            <div class="heading">Awards Won</div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-6">
                        <div class="wprt-counter">
                            <span class="number" data-speed="2000" data-to="@counter[0].Satisfied" data-inviewport="yes">@counter[0].Satisfied</span>
                            <span class="suffix">%</span>
                            <div class="heading">Satisfied Customers</div>
                        </div>
                    </div>
                </div><!-- /.row -->
            </div>

            @*<div class="wprt-spacer clearfix" data-desktop="71" data-mobi="51" data-smobi="31" style="height:71px"></div>*@
        </div>
    </div>
</div>

<div class="row-about-1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="wprt-headings clearfix text-center" style="padding: 20px 0px;">
                    <div class="sec-title center">
                        <h2>Shining <span>Stars</span></h2>
                    </div>
                    @*<div class="sub-heading">We are here to Acelerate your business and help you find the way.</div>*@
                </div>
                <div class="wprt-portfolio-grid" data-column="4" data-column2="3" data-column3="2" data-column4="1" data-gaph="30" data-gapv="30">
                    <div id="project-filter" class="filter-dark" style="display:none">
                        <div class="inner">
                            <div data-filter="*" class="cbp-filter-item"><span>All Projects</span></div>
                            <div data-filter=".strategy" class="cbp-filter-item"><span>Strategy Marketing</span></div>
                            <div data-filter=".finance" class="cbp-filter-item"><span>Corporate Finance</span></div>
                            <div data-filter=".resources" class="cbp-filter-item"><span>Resources planning</span></div>
                            <div data-filter=".equity" class="cbp-filter-item"><span>Private Equity</span></div>
                            <div data-filter=".analytics" class="cbp-filter-item"><span>Advanced Analytics</span></div>
                        </div>
                    </div><!-- /.project-filter -->
                    <div id="projects" class="cbp">
                    @if(achieve!=null)
                    {
                    foreach (var ach in achieve)
                    {
                        <div class="cbp-item equity finance">
                            <div class="project-item style-2">
                                <div class="inner">
                                    <div class="project-image">
                                        <img src="~/UploadedFiles/@ach.Image" alt="image">
                                    </div>
                                   

                                    <a class="zoom-popup cbp-lightbox" href="~/UploadedFiles/@ach.Image" data-title="Airlines & Transportation">
                                        <i class="fa fa-arrows"></i>
                                    </a>
                                </div>
                            </div><!-- /.project-item -->

                        </div><!-- /.cbp-item -->
                    }
                    }
                      
                    </div><!-- /#projects -->
                </div><!-- /.wprt-portfolio-grid -->
                <div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="40"></div>
            </div><!-- /.cold-md-12 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</div>

