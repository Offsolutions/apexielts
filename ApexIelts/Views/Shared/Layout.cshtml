@using System.Web.Optimization
@using AdminPaneNew.Areas.OfficialAdmin.Models
@{
    Layout = null;
    dbcontext db = new dbcontext();
    List<Contact> cc = db.Contacts.ToList();
    List<Service> ss = db.Services.ToList();
    List<SingleService> sser = db.SingleServices.ToList();

}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US" lang="en-US">
<head>
    <!-- Basic Page Needs -->
    <meta charset="utf-8">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <title>Apex Ielts Centre Zira</title>
    @RenderSection("Keyword", required: false)
    <meta name="description" content="Template built for Business & Financial, Consulting, Accounting, Broker">
    <meta name="keywords" content="advisor, analytical, audit, broker, brokerage, business, company, Consultech, consulting, consulting psd, finance, financial, insurance, trader, trading">
    <meta name="author" content="clawthemes.com">
    @Styles.Render("~/Content/css")
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Theme Style -->
    @*<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>*@
    <![endif]-->
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

</head>
<body class="front-page header-style-1 menu-has-search menu-has-cart header-fixed">
    <div id="wrapper" class="animsition">
        <div id="page" class="clearfix">
            <!-- Header Wrap -->
            <div id="site-header-wrap">
                <!-- Top Bar -->
                <div id="top-bar">
                    <div id="top-bar-inner" class="container clearfix">
                        <div class="top-bar-inner-wrap">
                            <div class="top-bar-content style-1">
                                <span class="address content">
                                    @cc[0].Address
                            </span>
                            <span class="mail content">@cc[0].Email</span>
                            <span class="phone content">@cc[0].Mobile</span>
                        </div><!-- /.top-bar-content -->
                        <div class="top-bar-socials style-2">
                            <div class="inner">
                                <nav id="nav-language">
                                    <ul>
                                        @if (Session["student"] == null)
                                        {
                                        <li class="select">
                                            <a href="#" data-toggle="modal" data-target="#login-modal"><i class="fa fa-user"></i>Student Login</a>
                                        </li>
                                        }
                                        else
                                        {
                                        <li>
                                            <a href="Home"> <i class="fa fa-user"></i>Log Out</a>
                                        </li>
                                        }
                                    </ul>
                                </nav>

                                <span class="icons">
                                    <a href="https://www.facebook.com/apexieltscentrezira/" title="Facebook">
                                        <span class="fa fa-facebook" aria-hidden="true"></span>
                                    </a>
                                    <a href="#" title="Twitter">
                                        <span class="fa fa-twitter" aria-hidden="true"></span>
                                    </a>
                                    <a href="#" title="Google Plus">
                                        <span class="fa fa-google-plus" aria-hidden="true"></span>
                                    </a>
                                </span>
                            </div>
                        </div><!-- /.top-bar-socials -->
                    </div>
                </div>
            </div>
            <!-- /Top Bar -->
            <!-- Header -->
            <header id="site-header">
                <div id="site-header-inner" class="container clearfix">
                    <div class="wrap-inner">
                        <div id="site-logo" class="clearfix">
                            <div id="site-logo-inner">
                                <a href="@Url.Action("Home")" title="Contrucst" rel="home" class="main-logo">
                                    <img src="~/Images/logo.png" width="215" alt="Logo" data-retina="assets/img/logo@2x.png" data-width="198" data-height="44">
                                </a>
                            </div>
                        </div><!-- /#site-logo -->
                        <div class="mobile-button"><span></span></div><!-- //mobile menu button -->

                        <nav id="main-nav" class="main-nav">
                            <ul>
                                <li>
                                    <a href="@Url.Action("Home")">Home</a>

                                </li>
                                <li class="menu-item-has-children">
                                    <a href="#">About Us</a>
                                    <ul>
                                        <li><a href="@Url.Action("CompanyOverview")">Company OverView</a></li>
                                        <li><a href="@Url.Action("FounderMessage")">Founder Message</a></li>
                                        <li><a href="@Url.Action("WhyChooseUs")">Why Choose Us</a></li>
                                        <li><a href="@Url.Action("OurMission")">Our Mission</a></li>
                                        <li><a href="@Url.Action("OurVision")">Our Vision</a></li>

                                    </ul>
                                </li>
                                <li class="current-menu-item menu-item-has-children">
                                    <a href="#">Service</a>
                                    <ul>
                                        @foreach (var a in ss)
                                            {
                                            <li>
                                                @Html.ActionLink(a.Name, "Service", new { id = a.Serviceid })
                                                <ul style="position: absolute;top: 0px;">
                                                    @foreach (var nn in sser.Where(x=>x.Serviceid==a.Serviceid))
                                                        {
                                                        <li>
                                                            @Html.ActionLink(nn.Name, "ServiceDetails", new { id = nn.Singleid })
                                                        </li>
                                                        }
                                                </ul>

                                            </li>

                                            }

                                    </ul>
                                </li>
                                <li>
                                    <a href="@Url.Action("ShiningStars")">Shining Stars</a>

                                </li>
                                <li class="menu-item-has-children">
                                    <a href="#">Gallery</a>
                                    <ul>
                                        <li><a href="@Url.Action("Albums")">Gallery</a></li>
                                        <li><a href="@Url.Action("Video")">Video</a></li>

                                    </ul>
                                </li>

                                <li><a href="@Url.Action("ContactUs")">Contact</a></li>
                            </ul>
                        </nav><!-- /#main-nav -->

                    </div>
                </div>
            </header>
            <!-- /Header -->
        </div>
        <!-- /Header Wrap -->
        <!-- Main Content -->
        <div class="container-fluid">
            @RenderBody()
        </div>
        <!-- /Main Content -->
        <!-- Footer -->
        <footer id="footer">

            <div id="footer-widgets">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 col-sm-6">
                            <div class="widget widget_text">
                                <div class="textwidget">
                                    <img src="~/assets/img/logo-footer.png" width="200" alt="logo">
                                </div>
                            </div>
                            <div class="widget widget_spacer">
                                <div class="spacer clearfix" data-desktop="15" data-mobi="15"></div>
                            </div>
                            <div class="widget widget_socials">
                                <div class="socials style-2 clearfix">
                                    <div class="icon">
                                        <a target="_blank" href="https://www.facebook.com/apexieltscentrezira/">
                                            <i class="fa fa-facebook"></i>
                                        </a>
                                    </div>
                                    <div class="icon">
                                        <a target="_blank" href="#">
                                            <i class="fa fa-twitter"></i>
                                        </a>
                                    </div>
                                    <div class="icon">
                                        <a target="_blank" href="#">
                                            <i class="fa fa-google-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="wprt-spacer" data-desktop="24" data-mobi="24" data-smobi="20"></div>
                            <div class="widget widget_text">
                                ©2018 Apex Ielts Centre. All rights reserved.<br />
                                Powered By: <a href="http://www.officialsolutions.in">Official Solutions</a>
                            </div>
                            <div class="wprt-spacer" data-desktop="0" data-mobi="25" data-smobi="25"></div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="widget widget_spacer">
                                <div class="spacer clearfix" data-desktop="5" data-mobi="0"></div>
                            </div>
                            <div class="widget widget_text">
                                <h2 class="widget-title"><span>Follow Us</span></h2>
                            </div>
                            <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fapexieltscentrezira%2F&tabs&width=250&height=180&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId=755281824540788" width="250" height="180" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe><!-- /.wprt-carousel-box -->

                            <div class="wprt-spacer" data-desktop="0" data-mobi="25" data-smobi="25"></div>
                        </div>

                        <div class="col-md-3 col-sm-6">
                            <div class="widget widget_spacer">
                                <div class="spacer clearfix" data-desktop="5" data-mobi="0"></div>
                            </div>
                            <div class="widget widget_text">
                                <h2 class="widget-title"><span>We Are here</span></h2>
                            </div>
                            <div class="widget widget_text">
                                <p class="text-1">@cc[0].Mobile</p>
                                <p class="text-2"><a href="info.consultant%40gmail.html">@cc[0].Email</a></p>
                            </div>
                            <div class="widget widget_text">
                                <p class="text-1">@cc[0].Address</p>
                            </div>
                            <div class="wprt-spacer" data-desktop="0" data-mobi="25" data-smobi="25"></div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="widget widget_spacer">
                                <div class="spacer clearfix" data-desktop="6" data-mobi="0"></div>
                            </div>
                            <div id="widget_information-2" class="widget widget_information">
                                <h2 class="widget-title"><span>Our Newsletter</span></h2>
                                <form action="#" method="get" class="wpcf7-form" novalidate="novalidate">
                                    <input type="email" name="your-email" class="wpcf7-email" aria-required="true" placeholder="E-mail:...">
                                    <button type="submit" class="wpcf7-submit">Subscribe</button>
                                </form>
                            </div>
                            <div class="spacer clearfix" data-desktop="14" data-mobi="10" data-smobi="10"></div>
                            <div class="widget widget_text">
                                Subscribe to our mailing list to get the updates to your email inbox.
                            </div>
                        </div>
                    </div><!-- /.row -->
                </div>

            </div><!-- /#footer-widgets -->
        </footer>
        <!-- /Footer -->
    </div><!-- /#page -->
</div><!-- /#wrapper -->
<a id="scroll-top"></a>

<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="loginmodal-container">
            <h1>Login to Your Account</h1><br>
            @using (Html.BeginForm("Login", "", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @*<form>*@
                <input type="text" name="UserName" placeholder="Username">
                <input type="password" name="Password" placeholder="Password">
                <input type="submit" name="login" class="login loginmodal-submit" value="Login">
                @*</form>*@
            }
            <div class="login-help">
                <a href="#">Register</a> - <a href="#">Forgot Password</a>
            </div>
        </div>
    </div>
</div>
   
    <script>
  $(function() {
    $(".rslides").responsiveSlides();
  });
    </script>

@Scripts.Render("~/bundles/bootstrap")

</body>
</html>