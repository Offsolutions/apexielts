@model IEnumerable<AdminPaneNew.Areas.OfficialAdmin.Models.Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/OfficialAdmin/Views/Shared/Layout.cshtml";
}

@section Pagename {

    Services

}
<h2><b>Index</b></h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="width:1050px !important;">
                        @Html.DisplayNameFor(model => model.ShortDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.date)
                </th>*@
                <th>Action</th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td >
                        <div style="max-height: 50px;overflow: hidden;">
                            @Html.Raw(item.ShortDescription)
                        </div>
                    </td>
                    <td>
                        <img src="~/UploadedFiles/@item.Image" style="width:100px;" class="img-responsive" />
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>*@
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Serviceid }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Serviceid }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Serviceid })
                    </td>
                </tr>
            }

</table>
    </div>